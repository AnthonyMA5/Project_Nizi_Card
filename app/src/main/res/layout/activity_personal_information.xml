<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="SpeakableTextPresentCheck">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:src="@drawable/profile_background"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btnAtrasPerfil"
                    android:layout_width="40dp"
                    android:layout_marginTop="14dp"
                    android:layout_height="37dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/atras">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="18dp"
                    android:layout_toEndOf="@+id/btnAtrasPerfil"
                    android:fontFamily="@font/gilroy_semibold"
                    android:text="Información personal"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    android:layout_marginTop="130dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/contenedor1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="75dp"
                            android:id="@+id/nombre_completo_perfil"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_semibold"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/correo_perfil_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gilroy_medium"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:layout_below="@+id/nombre_1_completo_perfil"
                            android:textSize="15dp" />

                        <View
                            android:id="@+id/divisor"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="#b9b9bb"/>

                        <TextView
                            android:id="@+id/title_nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divisor"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Nombre"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/name_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:textSize="17dp"
                            android:textColor="#353535">
                        </EditText>

                        <TextView
                            android:id="@+id/title_lastname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divisor"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Apellidos"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/lastname_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:textSize="17dp"
                            android:textColor="#353535">
                        </EditText>

                        <TextView
                            android:id="@+id/title_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divisor"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Número telefónico"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/number_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:textSize="17dp"
                            android:textColor="#353535">
                        </EditText>

                        <TextView
                            android:id="@+id/title_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divisor"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Correo electrónico"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/email_profile"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:textSize="17dp"
                            android:textColor="#353535">
                        </EditText>

                        <TextView
                            android:id="@+id/title_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divisor"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Nombre de usuario"
                            android:textColor="@color/black"
                            android:textSize="17dp" />

                        <EditText
                            android:id="@+id/username_profile"
                            android:inputType="textEmailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/gilroy_semibold"
                            android:textSize="17dp"
                            android:textColor="#353535">
                        </EditText>

                        <Button
                            android:id="@+id/btn_act_datos"
                            android:layout_width="180dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:textSize="18dp"
                            android:background="@drawable/rounded_buttons"
                            android:fontFamily="@font/gilroy_semibold"
                            android:text="Actualizar datos"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:stateListAnimator="@null"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="90dp"
                app:shapeAppearanceOverlay="@style/circular"
                android:src="@drawable/photo_example"
                app:civ_border_color="#D8D8D8"
                android:elevation="15dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                app:civ_border_width="3dp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>