<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OTP_Verification">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/otp_verification" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:text="Verificación OTP"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:text="Hemos enviado un código de confirmación"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/gilroy_medium"
                android:gravity="center"
                android:text="al correo electrónico que ingresaste"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/otp_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:text="correo_electrónico@ejemplo.com"
                android:textColor="#000000"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5">

                <EditText
                    android:id="@+id/OTP1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_cube"
                    android:ems="10"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/OTP2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_cube"
                    android:ems="10"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/OTP3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_cube"
                    android:ems="10"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/OTP4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_cube"
                    android:ems="10"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="30sp" />

                <EditText
                    android:id="@+id/OTP5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_cube"
                    android:ems="10"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="30sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnVerificar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/gilroy_semibold"
                android:text="Verificar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/newCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:text="Generar nuevo código"
                android:textColor="#6A6A6A"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>